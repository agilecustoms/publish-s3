{
  "compilerOptions": {
    "outDir": "dist/",
    "paths": {
      "*": ["./src/*"]
    },

    // reference configuration for Node20 from https://github.com/tsconfig/bases/blob/main/bases/node20.json
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16"
  }
}